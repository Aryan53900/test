rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the creator of a project
    function isProjectCreator(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Project images rules
    match /projects/{userId}/{imageId} {
      allow read: if isAuthenticated();
      allow write: if isProjectCreator(userId);
      allow delete: if isProjectCreator(userId);
    }
  }
} 